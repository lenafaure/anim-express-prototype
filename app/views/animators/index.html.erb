<div class="row">
  <div class="col-md-12 animators_heading">
    <div>
      <h3>Tous les profils d'animateurs</h3>
    </div>
    <div>
      <% if logged_in? && current_user.admin? %>
          <%= link_to new_animator_path do %>
              <%= content_tag :div, "+ crÃ©er un nouvel animateur", class: "btn btn-blue btn-lg"%>
          <% end %>
      <% end %>
    </div>
  </div>
  <% @animators.each do |animator| %>
      <div class="col-md-3 card_container">
        <%= link_to animator_path(animator) do %>
