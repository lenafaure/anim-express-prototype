<h1>Welcome to your Profile <%= @user.first_name %></h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user %>
  </div>
</div>
<h4><%= @user.first_name %>'s info</h4>
<p>
  Name: <%= @user.first_name %> <%= @user.last_name %>
</p>

<p>
  Email: <%= @user.email %>
</p>

<%= link_to 'Edit this user', edit_user_path(@user) %> |