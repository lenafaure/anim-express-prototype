<div class="col-md-12">
  <% if !logged_in? %>
    <h1>Inscription</h1>
  <% else %>
    <h1>Modifier le profil</h1>
  <% end %>
  <%= render "shared/errors", obj: @user %>
</div>

<div class="col-md-6">

  <% if !logged_in? %>
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Je suis Ã  la recherche d'un animateur</a></li>
    <li role="presentation" class="disabled"><a href="#profile" aria-controls="profile" role="tab">Je suis un animateur</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="home">
  <% end %>
      <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-12">
            <%= f.label :email %>
        </div>
        <div class="col-sm-12">
            <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
            <%= f.label :first_name %>
        </div>
        <div class="col-sm-12">
            <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
            <%= f.label :last_name %>
        </div>
        <div class="col-sm-12">
            <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
            <%= f.label :password %>
        </div>
        <div class="col-sm-12">
            <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
            <%= f.submit(@user.new_record? ? "Inscription" : "Sauvegarder", class: 'btn btn-info') %>
        </div>
      </div>

      <% end %>
  <% if !logged_in? %>
    </div>
    <div role="tabpanel" class="tab-pane" id="profile">...</div>
  </div>
  <% end %>
</div>
